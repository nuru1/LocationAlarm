<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTask">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="84dp"
        android:padding="5dp"
        android:id="@+id/input">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/msg_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Remind about"
            android:padding="10dp" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="New Reminder" />

    <TextView
        android:id="@+id/PlaceView"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignEnd="@+id/input"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/input"
        android:layout_alignTop="@+id/input"
        android:layout_marginRight="150dp"
        android:layout_marginTop="182dp"
        android:text="Selected Place"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/PickPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/PlaceView"
        android:layout_marginEnd="27dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Select Place" />

    <Spinner
        android:id="@+id/loc_type"
        android:layout_width="208dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/PlaceView"
        android:layout_marginTop="120dp"
        android:layout_alignStart="@+id/input"
        android:layout_marginBottom="221dp"
        android:layout_alignEnd="@+id/PlaceView"/>

    <Button
        android:id="@+id/CancelTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:padding="10dp"
        android:text="Cancel"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/SubmitTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CancelTask"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:padding="10dp"
        android:text="save"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/PlaceView"
        android:layout_marginTop="80dp"
        android:layout_alignStart="@+id/input"
        android:layout_marginBottom="222dp"
        android:text="Select Location Type"
        android:textSize="18dp"/>

</RelativeLayout>